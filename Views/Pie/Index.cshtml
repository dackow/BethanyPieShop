@model IEnumerable<BethanyPieShop.Models.Pie>

<!DOCTYPE html>
<html>
    <head>
        <title>Index</title>
    </head>
    <body>
        <div>
            @ViewBag.Message
        </div>
        <div>
            @foreach(var pie in Model)
            {
                <div>
                    <h2>@pie.Name</h2>
                    <h3>@pie.Price.ToString("c")</h3>
                  <!--  <h4>@pie.Category.CategoryName</h4>-->
                </div>
            }
        </div>
    </body>
</html>